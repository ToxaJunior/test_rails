<% if user_signed_in? %>
    <h1>Hello <%=  current_user.email %></h1>
    <%= link_to 'Sign out', destroy_user_session_path, :method => :delete %>
    <% @roles.each do |role|%>
      <h2><%= role.name %></h2>
        <% role.permissions.each do |permission|%>
            <p style="margin-left: 50px"><%= permission.name %></p>
        <% end %>
    <% end %>
    <div><%= link_to 'Add new role', new_role_path %></div>
    <div><%= link_to 'Add new permission', new_permission_path %></div>
<% end %>

